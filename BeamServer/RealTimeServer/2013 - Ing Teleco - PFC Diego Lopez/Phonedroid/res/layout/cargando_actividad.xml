<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/PantallaCargando"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@color/grisFondo"
    	>
    	
        <ImageView
            android:id="@+id/imagen_cargando"
            android:contentDescription="Cargando"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_aplicacion"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MedGris.Centrado.Cursiva"
            android:layout_marginTop="50dp"
            android:layout_below="@id/imagen_cargando"
            android:text=""
            />
    	
	</RelativeLayout>
